{
  "name": "melange-project",
  "dependencies": {
    "ocaml": "4.12.x",
    "melange": "melange-re/melange",
    "@opam/ocaml-lsp-server": "*"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": [
      "rm -rf node_modules/bs-platform",
      "ln -sfn #{melange.install} node_modules/bs-platform",
      "bsb -make-world"
    ]
  },
  "installConfig": {
    "pnp": false
  }
}
