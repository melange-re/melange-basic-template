{
  "name": "melange-project",
  "dependencies": {
    "ocaml": "4.12.x",
    "melange": "melange-re/melange"
  },
  "devDependencies": {
    "@opam/ocaml-lsp-server": "1.8.3",
    "@opam/ocamlformat-rpc": "0.19.0"
